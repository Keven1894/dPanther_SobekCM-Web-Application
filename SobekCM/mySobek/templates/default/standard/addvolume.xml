<?xml version="1.0" encoding="utf-8" ?>

<!-- Begin the XML for this input template -->
<input_template
  xmlns="http://digital.uflib.ufl.edu/metadata/sobekcm_template/"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://digital.uflib.ufl.edu/metadata/sobekcm_template/
		http://digital.uflib.ufl.edu/metadata/sobekcm_template/sobekcm_template.xsd">

	<!-- Define the information about this input template -->
	<name>Add Volume Template</name>
	<notes>Template contains only the bare essentials for adding a new volume/item to an existing title/item group</notes>
	<dateCreated>January 25, 2011</dateCreated>
	<lastModified>January 25, 2011</lastModified>
	<creator>Mark V Sullivan</creator>

	<!-- This defines the inputs which are available for the user -->
	<inputs>
		<page>
			<name language="eng">Volume Information</name>
			<panel>
				<name>New Volume Information</name>
				<element type="Bib" mandatory="true" readonly="true" />
				<element type="Visibility" />			
				<element type="Title" subtype="simple" />
				<element type="Date" />
				<element type="SerialHierarchy" subtype="panel" />
			</panel>
			<panel>
				<name>Physical Material</name>
				<element type="Born_Digital" />
				<element type="Material_Received_Date" />
				<element type="Disposition_Advice" />
				<element type="Tracking_Box" />
			</panel>
		</page>
	</inputs>
</input_template>
<!-- End of input template XML -->